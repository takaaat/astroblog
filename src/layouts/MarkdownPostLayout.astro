---
import BlogLayout from "./BlogLayout.astro";

const { frontmatter } = Astro.props;
const date = new Date(frontmatter.pubDate);
const dateText = `${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`;
---

<BlogLayout>
  <div class="max-w-4xl mx-auto">
    <article class="bg-white shadow-md p-8">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">
          {frontmatter.title}
        </h1>
        <div class="flex items-center text-sm text-gray-500 mb-4">
          <span>{dateText}</span>
          {
            frontmatter.category && (
              <>
                <span class="mx-2">|</span>
                <a
                  href={`/categories/${frontmatter.category}`}
                  class="text-gray-600 font-medium hover:underline"
                >
                  {frontmatter.category}
                </a>
              </>
            )
          }
        </div>
        {
          frontmatter.tags && (
            <div class="flex items-center mb-6">
              <svg
                class="w-4 h-4 text-gray-500 mr-2"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"
                  clip-rule="evenodd"
                />
              </svg>
              <div class="flex space-x-2">
                {frontmatter.tags.map((tag: string) => (
                  <a
                    href={`/tags/${tag}`}
                    class="bg-gray-200 text-gray-700 text-xs px-2 py-1 shadow-sm hover:bg-gray-300 transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </header>

      <div class="prose max-w-none">
        <slot />
      </div>
    </article>
  </div>
</BlogLayout>
