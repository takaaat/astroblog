---
import { Image } from "astro:assets";
import authorImage from "../images/authorIcon.png";
const author = {
  name: "takaaat",
  subtitle: "",
  description: "このブログの記事を書いている人です",
};
---

<div class="bg-white p-6 mb-6 shadow">
  <h3 class="text-lg font-bold text-gray-800 mb-4 relative">
    About
    <div class="absolute -bottom-1 left-0 w-8 h-0.5 bg-gray-800"></div>
  </h3>
  <div class="text-center mb-4">
    <div
      class="w-16 h-16 bg-gray-600 mx-auto mb-3 flex items-center justify-center shadow-sm"
    >
      <Image
        src={authorImage}
        alt="Author"
        class="w-full h-full object-cover"
      />
    </div>
    <h4 class="font-medium text-gray-800">{author.name}</h4>
    <p class="text-sm text-gray-500">{author.subtitle}</p>
  </div>
  <p class="text-sm text-gray-600 leading-relaxed relative pl-3">
    <div class="absolute left-0 top-1 w-1 h-4 bg-gray-400"></div>
    {author.description}
  </p>
</div>
