---
interface Props {
  tags: string[];
  stopPropagation?: boolean;
}

const { tags, stopPropagation = false } = Astro.props;
---

<div class="flex items-start">
  <svg
    class="w-4 h-4 text-gray-500 mr-2 mt-1"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      fill-rule="evenodd"
      d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"
      clip-rule="evenodd"
    />
  </svg>
  <div class="flex flex-wrap gap-2">
    {
      tags.map((tag: string) => (
        <a
          href={`/tags/${tag}`}
          class="bg-gray-200 text-gray-700 text-xs px-2 py-1 shadow-sm hover:bg-gray-300 transition-colors"
          onclick={stopPropagation ? "event.stopPropagation()" : undefined}
        >
          {tag}
        </a>
      ))
    }
  </div>
</div>